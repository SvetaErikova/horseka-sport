form.form
  input(type="hidden" value="" name="fields[form]")
  input(type="hidden" value="")
  fieldset
    .form--title Оставить заявку
    .form--text Свяжемся с вами в рабочее время в течение 10 дней
    label.form--input
      input(type="text" placeholder="Иванов Иван Иванович" name="fields[name]" pattern="[А-Яа-яЁё]+" required autocomplete)
      span Ваше имя
      .form--input_error Ошибка заполнения
    label.form--input
      input(type="tel" placeholder="+7 999 999-99-99" name="fields[phone]" inputmode="numeric" autocomplete="tel" required)
      span Телефон
      .form--input_error Ошибка заполнения
    label.form--input
      input(type="email" placeholder="example@imperial.ru" name="fields[email]"  autocomplete="email" required)
      span Email
      .form--input_error Ошибка заполнения
    label.form--input
      input(type="number" inputmode="numeric" placeholder="0" name="fields[number]" min="1" max="123" required)
      span Количество
      .form--input_error Ошибка заполнения
    label.form--input
      textarea(placeholder="Введите комментарий" name="fields[email]" rows="4" maxlength="1000")
      span Комментарий
      .form--input_error Ошибка заполнения
    label.form--input
      input.form--input_date(type="text" placeholder="" data-min="2023-11-02" data-max="2024-12-03" name="fields[date]" )
      span Дата
      .form--input_error Ошибка заполнения
    .form--input
      span checkbox item
      label
        input(type="checkbox" value="" required name="1" )
        <svg class="checkbox" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect x="1" y="1" width="18" height="18"/>
        <path d="M5 9.23529L9 14L16 5" stroke="white" />
        </svg>
        span checkbox
      .form--input_error Ошибка заполнения
    .form--input
      span slider item
      label.js-toggle
        input(type="checkbox" value="123"  name="1")
        input(type="hidden" value="234"  name="1")
        <svg class="slider" xmlns="http://www.w3.org/2000/svg" width="36" height="20" viewBox="0 0 36 20" fill="none">
        | <rect class="slider--border" x="0.5" y="0.5" width="35" height="19" rx="9.5" stroke="#141A25"/>
        | <rect class="slider--dot" x="20" y="4" width="12" height="12" rx="6" fill="#2E333D"/>
        </svg>
        </svg>
        span checkbox
      .form--input_error Данное поле обязательно к заполнению
    .form--input
      span checkbox group
      label
        input(type="checkbox" value=""  name="1" )
        <svg class="checkbox" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect x="1" y="1" width="18" height="18" fill="#2E333D"/>
        <path d="M5 9.23529L9 14L16 5" />
        </svg>
        span checkbox group
      label
        input(type="checkbox" value="" name="2" )
        <svg class="checkbox" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect x="1" y="1" width="18" height="18"/>
        <path d="M21.6291 5.49425L20.371 4.50574L9.92807 17.7967L3.5657 11.4343L2.43433 12.5657L10.072 20.2033L21.6291 5.49425Z"/>

        </svg>
        <svg class="checkbox" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect x="1" y="1" width="18" height="18" fill="#2E333D"/>
        <path d="M5 9.23529L9 14L16 5" stroke="white"/>
        </svg>
        span checkbox group
      .form--input_error Ошибка заполнения
    .form--input
      span Группа радио кнопок
      label
        input(type="radio" value="1" name="1" required)
        <svg class="radio" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect class="radio--border" x="1.5" y="1.5" width="17" height="17" rx="8.5"/>
        <rect class="radio--dot" x="6" y="6" width="8" height="8" rx="4"/>
        </svg>
        span radio group
      label
        input(type="radio" value="2" name="1" )
        <svg class="radio" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect class="radio--border" x="1.5" y="1.5" width="17" height="17" rx="8.5"/>
        <rect class="radio--dot" x="6" y="6" width="8" height="8" rx="4"/>
        </svg>
        span radio group
      label
        input(type="radio" value="3" name="1" )
        <svg class="radio" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <rect class="radio--border" x="1.5" y="1.5" width="17" height="17" rx="8.5"/>
        <rect class="radio--dot" x="6" y="6" width="8" height="8" rx="4"/>
        </svg>
        span radio group
      .form--input_error Ошибка заполнения
    label.form--input
      span Селект
      select(name="" )
        //option(value="" selected disabled) Выберите опцию
        option(value="") Опция 2
        option(value="") Опция 3
        option(value="") Опция 4
    .form--input
      label.form--input_file
        p.js-changeDescriptionText() <span>Выберите файл</span> с резюме (doc, pdf, до 10мб)
        input.hidden.js-input_file(type="file" required name="" accept=".doc,.docx,.pdf" data-maxsize="1048576")
        .js-clearFile
      span Поле для загрузки текстового файла
      .form--input_error Ошибка заполнения
    .form--input
      label.form--input_file
        p.js-changeDescriptionText(data-text="Выберите файл с картинкой (doc, pdf, до 10мб)")  <span>Выберите файл</span> с картинкой (doc, pdf, до 10мб)
        input.hidden.js-input_file(type="file" required name="" accept=".svg,.png,.jpg,.jpeg,.pdf,.webp" data-maxsize="16777216")
        .js-clearFile
      span Поле для загрузки картинок
      .form--input_error Ошибка заполнения

    .form--button
      button.button.button-filled.button-accent(type="submit" disabled)
        span Отправить
    p.form--policy Нажимая кнопку, вы соглашаетесь с
      a(href="") политикой конфиденциальности
